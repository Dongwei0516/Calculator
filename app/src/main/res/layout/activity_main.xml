            <Button android:id="@+id/btn_8" android:text="8" android:onClick="onClick"/>
            <Button android:id="@+id/btn_9" android:text="9" android:onClick="onClick"/>
            <Button android:id="@+id/btn_sub" android:text="-" android:onClick="onClick"/>
        </TableRow>

